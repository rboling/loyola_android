<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.robert.loyaltyclub.LaunchActivity">
    <TextView
        android:text="@string/choose_process_option_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/enter_credits_bought_id"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:textSize="30dp"
        bootstrapbutton:bb_type="info"
        bootstrapbutton:bb_roundedCorners="true"
        android:text="@string/enter_credits_bought"/>
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/enter_credits_used_id"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/enter_credits_bought_id"
        android:textSize="30dp"
        bootstrapbutton:bb_type="info"
        bootstrapbutton:bb_roundedCorners="true"
        android:text="Enter Credits Used"/>
</RelativeLayout>
