<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.robert.loyaltyclub.UsingCredits">
    <TextView
        android:id="@+id/using_credits_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/using_credits_prompt_text"/>
    <EditText
        android:id="@+id/enter_phone_number_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_to_enter_phone_number"/>
    <EditText
        android:id="@+id/enter_the_amount_of_credits_used"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_to_enter_credits_used"/>
    <Button
        android:id="@+id/check_balance_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_balance_button_text"/>
    <Button
        android:id="@+id/using_credits_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/using_credits_prompt_text"/>

</LinearLayout>
